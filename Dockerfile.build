# Dockerfile.build
FROM --platform=$TARGETPLATFORM ubuntu:latest

# Install build dependencies
RUN apt-get update && apt-get install -y \
    g++ \
    cmake \
    libncurses5-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy source files
WORKDIR /build
COPY . .

# Build
RUN cmake -DCMAKE_BUILD_TYPE=Release . && \
    make && \
    strip multiproc

# The binary will be in /build/multiproc
# Docker buildx will copy the contents of /build to the dest directory
